# screen fixes
autodetach on
defutf8 on
altscreen on
defscrollback 10000
startup_message off 
msgwait 3.0 
term xterm-256color
nonblock on
termcapinfo vt100 dl=5\E[M
sorendition "+b Wb" 
vbell on

# status bar 
backtick 1 15 15 /Applications/cpu.sh
backtick 2 15 15 python /Applications/memreport.py 
hardstatus alwayslastline
hardstatus string "%{.bW}%-w%{.rW}%n %t%{-}%+w %=%{..G} %H || %1` || %2`"
caption always "%=%{..G}  %h %-024=%{+b} %C%a %D %d %M %Y%{= db}"

# terminal fixes
#termcapinfo xterm*|rxvt*|kterm*|Eterm* hs:ts=\E]0;:fs=\007:ds=\E]0;\007
#termcapinfo xterm*|linux*|rxvt*|Eterm* OP
#termcapinfo xterm 'is=\E[r\E[m\E[2J\E[H\E[?7h\E[?1;4;6l'

# default windows
screen -t bash 1 bash 

# keybindings
# F9 resize -1 line
bindkey -k k9 resize -1
# F10 resize +1 line
bindkey -k k; resize +1
# F7 Remove single split
bindkey -k k7 remove
# F8 Remove all splits
bindkey -k k8 only
# F5 & F6 previous and next
bindkey -k k5 prev
bindkey -k k6 next